span id="answer-block-#{answer.id}"
  span id="answer-errors-#{answer.id}"
  = answer.body

  = form_with model: answer, class: 'hidden', html: { id: "edit-answer-#{answer.id}" }, local: false do |f|
    = f.label :body, 'Your answer'
    = f.text_area :body
    = f.submit 'Save'

  
  - if user_signed_in? && current_user.author?(answer.author_id)
    nav class='nav'
      = link_to 'Edit','', class: 'edit-answer-link nav-link', data: { answer_id: answer.id } 
      = link_to "Delete", answer_path(answer), class: 'delete-answer-link nav-link', method: 'delete', data: { answer_id: answer.id }
  - if user_signed_in? && current_user.author?(@question.author_id) && !answer.is_best?
      = link_to 'Mark as the best answer', select_answer_path(@question), class: 'mark-answer-link nav-link', data: { answer_id: answer.id } 
